<%= stylesheet_link_tag "register" %>
<% if current_user %>
<br>
<div class="out">
    <%= link_to "Sign Out", destroy_user_session_path, 'data-turbo-method': :delete, class: "btn btn-outline-danger", style: "margin-left: -150px;" %>
</div>
 
<%= render "form", restaurant: @restaurant %>
<br>
   <table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">City</th>
    </tr>
  </thead>
  <tbody>
   <% @restaurants.each do |restaurant| %>
    <tr>
      <th scope="row"><%= restaurant.id %></th>
      <td><%= restaurant.name %></td>
      <td><%= restaurant.description %></td>
      <td><%= restaurant.city %></td>
    </tr>
<% end %>

  </tbody>
</table>
<% else %>
<br>
<br>
<br>
<br>
<br>


<div class="res">
  <div class="uk-card uk-card-default uk-card-hover uk-card-body">
      <br>
      <h3 align="center">Welcome to Restaurant</h3>
      <br>
      <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary" %> 
      <%= link_to "Login", new_user_session_path, class: "btn btn-primary" %>
  </div>
</div>
<% end %>
